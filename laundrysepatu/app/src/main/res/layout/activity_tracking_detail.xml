<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context="com.example.PremiumCleanCare.TrackingDetail">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Detail Tracking"
        android:textColor="#fff"
        android:textSize="9pt"
        android:textStyle="bold"
        android:background="#b37700"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgsepatu"
                    android:layout_width="400px"
                    android:layout_height="400px"
                    android:src="@drawable/sepatu1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtnonota"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="No Nota"
                            android:textColor="#000"
                            android:textSize="7.5pt" />

                        <TextView
                            android:layout_width="5dp"
                            android:layout_height="match_parent"
                            android:text=":"
                            android:textColor="#000"
                            android:textSize="7.5pt" />

                        <TextView
                            android:id="@+id/nonota"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="TN001"
                            android:textColor="#000" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txttanggal"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="Tanggal"
                            android:textColor="#000"
                            android:textSize="7.5pt" />

                        <TextView
                            android:layout_width="5dp"
                            android:layout_height="match_parent"
                            android:text=":"
                            android:textColor="#000"
                            android:textSize="7.5pt" />

                        <TextView
                            android:id="@+id/tanggal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="2019-05-28"
                            android:textColor="#000" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txttotalbayar"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="Total Bayar"
                            android:textColor="#000"
                            android:textSize="7.5pt" />

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:text=": Rp"
                            android:textColor="#000"
                            android:textSize="7.5pt" />

                        <TextView
                            android:id="@+id/totalbayar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="80000"
                            android:textColor="#000" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Keterangan"
                android:textColor="#000"
                android:textSize="8pt"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtnamapelanggan"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:text="Nama Pelanggan"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/namapelanggan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Ali Mansur"
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtalamat"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:text="Alamat"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/alamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Jl. Mastrip No.5, Jember"
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtpaket"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:text="Paket"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/paket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Recolour"
                    android:textColor="#000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtketsepatu"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:text="Keterangan Sepatu"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/ketsepatu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Sepasang sepatu saat diambil dalam kondisi tidak cacat"
                    android:textColor="#000" />
            </LinearLayout>

            <TextView
                android:id="@+id/status"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/style_status"
                android:padding="3dp"
                android:text="Selesai"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#33cc33"
                android:textSize="10pt"
                android:textStyle="bold" />

            <Button
                android:id="@+id/hapustracking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_btn"
                android:text="Hapus"
                android:textColor="#fff" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>